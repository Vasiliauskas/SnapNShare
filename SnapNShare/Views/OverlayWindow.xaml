<Window x:Class="SnapNShare.Views.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized" 
        WindowStyle="None" 
        Background="#96000000"
        AllowsTransparency="True" 
        Cursor="Cross"
        KeyDown="Window_KeyDown"
        ShowInTaskbar="False"
        MouseDown="Window_MouseDown" 
        MouseMove="Window_MouseMove"
        MouseUp="Window_PreviewMouseUp"
        >
    <Grid>
        <TextBlock x:Name="_txtBlock" FontSize="18" Text="Click and drag mouse to capture..." Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Canvas x:Name="_cnv"/>
    </Grid>
</Window>
